<OTPScreen@LoadScreen>
    id: otp_screen
    name: "otp_screen"

    MDTextField:
        id: otp_textfield
        name: 'otp_textfield'
        hint_text: "Enter Code from Text Message"
        pos_hint: {'center_x': .5, 'center_y': .5}
        halign: 'center'
        size_hint_x: None
        width: 300

    MDRectangleFlatButton:
        id: submit_button
        name: 'submit_button'
        text: "Submit"
        pos_hint: {'center_x': .5, 'center_y': .35}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: (100 / 255.0, 100 / 255.0, 100 / 255.0, .8)
        on_release: root.submit_code()